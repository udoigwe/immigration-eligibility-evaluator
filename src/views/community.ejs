<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
</head>

<body onload="isAuthenticated(); displayProfile(); updateProfilePopUp();" class="loading" data-layout-color="light"
    data-layout-mode="default" data-layout-size="fluid" data-topbar-color="light" data-leftbar-position="fixed"
    data-leftbar-color="light" data-leftbar-size='default' data-sidebar-user='true'>
    <!-- Begin page -->
    <div id="wrapper">
        <%- include('./partials/topBar') %>

            <%- include('./partials/sideBar') %>

                <div class="content-page">
                    <div class="content">
                    
                        <!-- Start Content-->
                        <div class="container-fluid">
                    
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="card">
                                        <div class="card-body">
                                            <h4 class="header-title">Whats on your mind?</h4>
                                            <p class="text-muted font-13">
                                                Please consider providing a category this post
                                            </p>
                                            <form method="post" class="" id="post-form">
                                                <div class="mb-3 col-md-12">
                                                    <label for="post_category_id" class="form-label">Category</label>
                                                    <select id="post_category_id" name="post_category_id" class="form-select required post_category_id" display="Post Category">
                                                        <option value="">Please Select</option>
                                                    </select>
                                                </div>
                                                <span class="input-icon icon-end">
                                                    <textarea rows="3" class="form-control required" id="post" name="post" placeholder="Whats on your mind?"></textarea>
                                                </span>
                                                <div class="pt-1 float-end">
                                                    <button type="submit" class="btn btn-primary btn-sm waves-effect waves-light">Send</button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                    
                                    <div class="card">
                                        <div class="card-body">
                                            <div class="row ">
                                                <div class="col-md-12">
                                                    <form class="d-flex flex-wrap align-items-center justify-content-sm-center" id="post-filter-form">
                                                        <label for="status-select" class="me-2">Filter Posts By Category</label>
                                                        <div class="me-sm-2">
                                                            <select class="form-select my-1 my-md-0 post_category_id" id="category-filter">
                                                                <option selected="">All</option>
                                                            </select>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div> <!-- end row -->
                                        </div>
                                    </div> <!-- end card -->
                    
                                    <div class="card">
                                        <div class="card-body posts"></div>
                                    </div>
                                </div>
                            </div>
                        </div> <!-- container -->
                    
                    </div> <!-- content -->

                    <!-- Footer Start -->
                    <footer class="footer">
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-md-6">
                                    <script>document.write(new Date().getFullYear())</script> &copy; Immigration
                                    Eligibility Evaluator
                                </div>
                                <div class="col-md-6">
                                    <div class="text-md-end footer-links d-none d-sm-block">
                                        <a href="javascript:void(0);">About Us</a>
                                        <a href="javascript:void(0);">Help</a>
                                        <a href="javascript:void(0);">Contact Us</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </footer>
                    <!-- end Footer -->

                </div>

                <!-- Modal -->
                <div class="modal fade" id="countryDisplay" data-bs-backdrop="static" data-bs-keyboard="false"
                    tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="staticBackdropLabel">Available Suitable Countries</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                    aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <div id="country-list"></div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary"
                                        data-bs-dismiss="modal">Close</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                
                <!-- Modal -->
                <div class="modal fade" id="replyModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
                    aria-labelledby="staticBackdropLabel" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="staticBackdropLabel">Reply Post</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <form method="post" class="card-body" id="reply-form">
                                    <span class="input-icon icon-end">
                                        <textarea rows="3" class="form-control required" id="reply" name="reply" placeholder="Whats on your mind?"></textarea>
                                        <input type="hidden" name="post_id" id="post_id" class="required" />
                                    </span>                                
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                    <button type="submit" class="btn btn-primary">Reply</button>
                                </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- ============================================================== -->
                <!-- End Page content -->
                <!-- ============================================================== -->
    </div>
    <!-- END wrapper -->

    <%- include('./partials/scripts') %>
        <script src="/assets/js/modules/community.js"></script>
</body>

</html>