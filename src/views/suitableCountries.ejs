<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('./partials/head') %>
    </head>
    <body onload="isAuthenticated(); displayProfile(); updateProfilePopUp();" class="loading" data-layout-color="light"  data-layout-mode="default" data-layout-size="fluid" data-topbar-color="light" data-leftbar-position="fixed" data-leftbar-color="light" data-leftbar-size='default' data-sidebar-user='true'>
        <!-- Begin page -->
        <div id="wrapper">
            <%- include('./partials/topBar') %>
            
            <%- include('./partials/sideBar') %>

            <div class="content-page">
                <div class="content">

                    <!-- Start Content-->
                    <div class="container-fluid">

                        <!-- Form row -->
                        <div class="row">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-body">
                                        <h4 class="header-title">Find Suitable Countries</h4>
                                        <p class="text-muted font-13">
                                            Fill up the form below to search for suitable countries matching your profile
                                        </p>

                                        <form id="suitable-countries-form">
                                            <div class="row">
                                                <div class="mb-3 col-12">
                                                    <label for="VisaCategoryID" class="form-label">Visa Category</label>
                                                    <select id="VisaCategoryID" name="VisaCategoryID" class="form-select required">
                                                        <option value="">Please Select</option>
                                                        <option value="1">Study Visa</option>
                                                        <option value="2">Work Visa</option>
                                                    </select>
                                                </div>
                                            </div>

                                            <div class="row criteria-list"></div>

                                            <button type="submit" class="btn btn-primary waves-effect waves-light">
                                                Evaluate
                                            </button>

                                        </form>

                                    </div> <!-- end card-body -->
                                </div> <!-- end card-->
                            </div> <!-- end col -->
                        </div>
                        <!-- end row -->
                        
                    </div> <!-- container -->

                </div> <!-- content -->

                <!-- Footer Start -->
                <footer class="footer">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-6">
                                <script>document.write(new Date().getFullYear())</script> &copy; Immigration Eligibility Evaluator
                            </div>
                            <div class="col-md-6">
                                <div class="text-md-end footer-links d-none d-sm-block">
                                    <a href="javascript:void(0);">About Us</a>
                                    <a href="javascript:void(0);">Help</a>
                                    <a href="javascript:void(0);">Contact Us</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </footer>
                <!-- end Footer -->

            </div>

            <!-- Modal -->
            <div class="modal fade" id="countryDisplay" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="staticBackdropLabel">Available Suitable Countries</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <div id="country-list"></div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- ============================================================== -->
            <!-- End Page content -->
            <!-- ============================================================== -->
        </div>
        <!-- END wrapper -->

        <%- include('./partials/scripts') %>
        <script src="/assets/js/modules/eligibilityCheck.js"></script>
    </body>
</html>