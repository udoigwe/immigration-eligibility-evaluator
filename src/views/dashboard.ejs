            }
            .cta-button {
                display: inline-block;
                background-color: #007bff; /* Button background color */
                color: white; /* Button text color */
                padding: 10px 20px; /* Button padding */
                font-size: 18px; /* Button font size */
                text-decoration: none; /* Remove underline */
                border-radius: 50px; /* Button border radius */
                transition: background-color 0.3s ease; /* Smooth transition effect */
            }

            .cta-button:hover {
                background-color: #0056b3; /* Button background color on hover */
            }

            .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 20px;
      display: flex;
      justify-content: space-between;
      flex-wrap: wrap;
    }

    .card {
      width: calc(33.33% - 20px); /* Adjust card width based on container width and spacing */
      position: relative;
      overflow: hidden;
      margin-bottom: 20px;
    }

    .card .overlay {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.5); /* Overlay color */
      color: white;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      padding: 20px;
      opacity: 0;
      transition: opacity 0.3s ease;
    }

    .card:hover .overlay {
      opacity: 1;
    }

    .card h2,
    .card p {
      margin-bottom: 10px;
      text-align: center;
      color: white;
      font-size: 15px;
    }

    .card .date {
      font-size: 14px;
      color: #ccc;
      margin-bottom: 10px;
    }

    .card a {
      text-decoration: none;
      color: white;
      font-weight: bold;
      background-color: #007bff;
      padding: 10px 20px;
      border-radius: 5px;
      transition: background-color 0.3s ease;
    }

    .card a:hover {
      background-color: #0056b3;
    }

    .card img {
      width: 100%;
      height: auto;
    }

    @media (max-width: 768px) {
      .container {
        flex-direction: column;
      }

      .card {
        width: 100%;
      }
    }

