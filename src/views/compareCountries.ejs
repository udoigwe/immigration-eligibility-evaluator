<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
    <style type="text/css">
        .criteria-container {
            margin-top: 10px;
            border-top: 1px solid #ccc;
            padding-top: 10px;
        }
        .criterion-details {
            margin-left: 20px;
        }
        .options-span {
            margin-right: 20px;
        }
    </style>
</head>

<body onload="isAuthenticated(); displayProfile();" class="loading" data-layout-color="light" data-layout-mode="default"
    data-layout-size="fluid" data-topbar-color="light" data-leftbar-position="fixed" data-leftbar-color="light"
    data-leftbar-size='default' data-sidebar-user='true'>
    <!-- Begin page -->
    <div id="wrapper">
        <%- include('./partials/topBar') %>

            <%- include('./partials/sideBar') %>

                <div class="content-page">
                    <div class="content">

                        <!-- Start Content-->
                        <div class="container-fluid">

                            <!-- Form row -->
                            <div class="row">
                                <div class="col-12">
                                    <div class="card">
                                        <div class="card-body">
                                            <h4 class="header-title">Compare Countries</h4>
                                            <p class="text-muted font-13">
                                                Compare immigration details between two countries of your choice to make better decisions
                                            </p>

                                            <form id="country-comparison">
                                                <div class="row">
                                                    <div class="mb-4 col-md-4">
                                                        <label for="country_one" class="form-label">First Country Of Choice</label>
                                                        <select id="country_one" name="country_one" class="form-select required"></select>
                                                    </div>
                                                    <div class="mb-4 col-md-4">
                                                        <label for="country_two" class="form-label">Second Country Of Choice</label>
                                                        <select id="country_two" name="country_two" class="form-select required"></select>
                                                    </div>
                                                    <div class="mb-4 col-md-4">
                                                        <label for="visa_category_id" class="form-label">Visa Category</label>
                                                        <select id="visa_category_id" name="visa_category_id" class="form-select required"></select>
                                                    </div>
                                                </div>

                                                <button type="submit" class="btn btn-primary waves-effect waves-light">
                                                    Compare
                                                </button>

                                            </form>

                                        </div> <!-- end card-body -->
                                    </div> <!-- end card-->
                                </div> <!-- end col -->
                            </div>
                            <!-- end row -->

                            <div class="row immigration-details"></div>

                        </div> <!-- container -->

                    </div> <!-- content -->

                    <!-- Footer Start -->
                    <footer class="footer">
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-md-6">
                                    <script>document.write(new Date().getFullYear())</script> &copy; Immigration
                                    Eligibility Evaluator
                                </div>
                                <div class="col-md-6">
                                    <div class="text-md-end footer-links d-none d-sm-block">
                                        <a href="javascript:void(0);">About Us</a>
                                        <a href="javascript:void(0);">Help</a>
                                        <a href="javascript:void(0);">Contact Us</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </footer>
                    <!-- end Footer -->

                </div>

                <!-- ============================================================== -->
                <!-- End Page content -->
                <!-- ============================================================== -->
    </div>
    <!-- END wrapper -->

    <%- include('./partials/scripts') %>
        <script src="/assets/js/modules/compareCountries.js"></script>
</body>

</html>