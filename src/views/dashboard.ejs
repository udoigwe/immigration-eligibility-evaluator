            .overlay {
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background-color: rgba(0, 0, 0, 0.8);
                /* Adjust the alpha value (last parameter) to make the overlay more or less transparent */
            }
        
            .content {
                position: relative;
                z-index: 1;
